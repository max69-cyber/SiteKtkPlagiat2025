<Page x:Class="SiteKtkPlagiatAnother.Pages.MainMenuForStudent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SiteKtkPlagiatAnother.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuForStudent">

    <Grid>
        <Button Click="SignOut" 
                Content="Выход" 
                HorizontalAlignment="Left"  
                VerticalAlignment="Top" 
                Margin="20,20,0,0"  
                Width="58"/>
        <TextBlock x:Name="NameBox"  
                   HorizontalAlignment="Right"  
                   VerticalAlignment="Top" 
                   Margin="0,20,20,0"/>
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            <Button Click="OpenSchedule" 
                    Content="Просмотр расписания" 
                    HorizontalAlignment="Center"  
                    VerticalAlignment="Top" 
                    Height="28"/>
            <Button Click="OpenTeacherList" 
                    Content="Просмотр преподователей" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top" 
                    Margin="0,15,0,0" 
                    Height="28"/>
        </StackPanel>
    </Grid>
</Page>
